# Codex Listical Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Supabase Configuration (Loveable will set these)
# ============================================

# Supabase Project URL
# Get this from your Supabase project settings
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous/Public Key
# Get this from your Supabase project API settings
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# Application Configuration
# ============================================

# Application Environment
# Options: development, staging, production
VITE_APP_ENV=development

# Application Base URL
# Used for OAuth redirects and email links
VITE_APP_URL=http://localhost:5173

# Enable debug logging
# Set to 'true' to enable verbose logging
VITE_DEBUG_MODE=false

# ============================================
# Feature Flags (Optional)
# ============================================

# Enable user registration
# Set to 'false' to disable new user signups
VITE_ENABLE_REGISTRATION=true

# Enable social authentication
# Set to 'true' to enable OAuth providers
VITE_ENABLE_SOCIAL_AUTH=false

# Storage mode
# Options: 'localStorage' (default), 'database' (when ready for Supabase)
VITE_STORAGE_MODE=localStorage

# ============================================
# Performance & Limits
# ============================================

# Maximum rows per planner page
VITE_MAX_PLANNER_ROWS=1000

# Auto-save debounce time (milliseconds)
VITE_AUTOSAVE_DEBOUNCE=500

# LocalStorage quota warning threshold (bytes)
# Default: 4MB (out of ~5-10MB typical limit)
VITE_STORAGE_WARNING_THRESHOLD=4194304

# ============================================
# Development Only (Not needed in production)
# ============================================

# Mock authentication (for testing without Supabase)
# Set to 'true' only in local development
VITE_USE_MOCK_AUTH=false
